@using TeamPortal.Web;
@model TeamPortal.Web.Models.Player

@{
    ViewBag.Title = "Details";
}

<fieldset>
    <legend>Player Profile for @Model.FirstName</legend>

    <div class="row">
        <div class="span4">
            <dl class="dl-horizontal">
                <dt>@Html.DisplayNameFor(m => m.FirstName)</dt>
                <dd>@Model.FirstName</dd>
                <dt>@Html.DisplayNameFor(m => m.LastName)</dt>
                <dd>@Model.LastName</dd>
                <dt>@Html.DisplayNameFor(m => m.JerseyNumber)</dt>
                <dd>@Model.JerseyNumber</dd>
                <dt>@Html.DisplayNameFor(m => m.EmailAddress)</dt>
                <dd>@Model.EmailAddress</dd>
                <dt>@Html.DisplayNameFor(m => m.StreetAddress)</dt>
                <dd>@Model.StreetAddress</dd>
                <dt>@Html.DisplayNameFor(m => m.City)</dt>
                <dd>@Model.City</dd>
                <dt>@Html.DisplayNameFor(m => m.StateId)</dt>
                <dd>@Model.StateId</dd>
                <dt>@Html.DisplayNameFor(m => m.PostalCode)</dt>
                <dd>@Model.PostalCode</dd>
            </dl>
        </div>

        <div class="span4">
            <img src="@Model.PhotoUri" alt="@Model.FirstName" />
        </div>

    </div>
 </fieldset>

    <div class="form-actions">
            @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary" })
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn" })
    </div>
   